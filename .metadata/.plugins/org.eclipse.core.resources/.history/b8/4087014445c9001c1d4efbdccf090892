/* CUSTOMIZE THE CAROUSEL
-------------------------------------------------- */

/* Carousel base class */
.car {
	margin-bottom: 4rem;
}
/* Since positioning the image, we need to help out the caption */
.carousel-caption {
	bottom: 3rem;
	z-index: 10;
}

/* Declare heights because of positioning of img element */
.i {
	height: 32rem;
}

.carousel-indicators li {
	width: 5px;
	height: 5px;
	border-radius: 100%;
}

.i>img {
	position: absolute;
	top: 0;
	left: 0;
	min-width: 100%;
	height: 32rem;
}

.i>img:hover {
	background: rgba(255, 255, 255, 0.25);
}

